#:kivy 1.0.9

BattleBoggleGame:

<ClearArea>:

<BattleWord>:
    orientation: 'horizontal'
    on_release: self.buttonRelease()
    Label:
        text: str(root.wordNumber)
        halign: 'right'
        size_hint_x: None
        width: 55

    Label:
        id: Word
        text: ''


<BattleTile>:
    text: "R1C1"
    size_hint: (None, None)
    width: 100
    height: 100
    on_release: self.buttonRelease()

    Label:
        id: l
        canvas:
            Color:
                rgba: 1,0,0,0.2
            Rectangle:
                size: self.size
                pos: self.pos
    

<BattleBoggleGame>:
    orientation: 'vertical'

    Label:
        spacing: 20
        size_hint_y: None
        height: 50
        text: 'Battle Boggle'
        canvas:
            Color: 
                rgba: 1,0,1,0.5
            Rectangle:
                size: self.size
                pos: self.pos
      
    BoxLayout: 
        canvas:
            Color:
                rgba: 1,1,0,0.2
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            on_touch_up: root.clearCurrentWord()
            id: OpponentWords
            orientation: 'vertical'
            
            Label:
                text: "Opponent Words"

            BattleWord:
                id: OpponentWord1
                wordNumber: 1
                boggleGame: root
                visible: True
            BattleWord:
                id: OpponentWord2
                boggleGame: root
                wordNumber: 2
                visible: False
            BattleWord:
                id: OpponentWord3
                boggleGame: root
                wordNumber: 3
                visible: False
            BattleWord:
                id: OpponentWord4
                boggleGame: root
                wordNumber: 4
                visible: False
            BattleWord:
                id: OpponentWord5
                boggleGame: root
                wordNumber: 5
                visible: False
            BattleWord:
                id: OpponentWord6
                boggleGame: root
                wordNumber: 6
                visible: False
            BattleWord:
                id: OpponentWord7
                boggleGame: root
                wordNumber: 7
                visible: False
            BattleWord:
                id: OpponentWord8
                boggleGame: root
                wordNumber: 8
                visible: False
            BattleWord:
                id: OpponentWord9
                boggleGame: root
                wordNumber: 9
                visible: False
            BattleWord:
                id: OpponentWord10
                boggleGame: root
                wordNumber: 10
                visible: False

        ClearArea: 
            id: Grid
            rows: root.rows
            cols: root.cols
            spacing: (10,10)
            col_default_width: 100
            col_force_default: True
            row_default_height: 100
            row_force_default: True
            size_hint: None, None
            height: self.minimum_height
            width: self.minimum_width
            pos_hint: { 'left': 1, 'center_y': 0.5}
            on_touch_up: root.clearCurrentWord()

            canvas:
                Color: 
                    rgba: 1,1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            
            BattleTile:
                id: R1C1
                boggleGame: root
            BattleTile:
                id: R1C2
                boggleGame: root
            BattleTile:
                id: R1C3
                boggleGame: root
            BattleTile:
                id: R1C4
                boggleGame: root
            BattleTile:
                id: R2C1
                boggleGame: root
            BattleTile:
                id: R2C2
                boggleGame: root
            BattleTile:
                id: R2C3
                boggleGame: root
            BattleTile:
                id: R2C4
                boggleGame: root
            BattleTile:
                id: R3C1
                boggleGame: root
            BattleTile:
                id: R3C2
                boggleGame: root
            BattleTile:
                id: R3C3
                boggleGame: root
            BattleTile:
                id: R3C4
                boggleGame: root
            BattleTile:
                id: R4C1
                boggleGame: root
            BattleTile:
                id: R4C2
                boggleGame: root
            BattleTile:
                id: R4C3
                boggleGame: root
            BattleTile:
                id: R4C4
                boggleGame: root

        BoxLayout: 
            id: PlayerWords
            orientation: 'vertical'
            
            Label:
                text: "Player Words"

            BattleWord:
                id: PlayerWord1
                boggleGame: root
                wordNumber: 1
            BattleWord:
                id: PlayerWord2
                boggleGame: root
                wordNumber: 2
            BattleWord:
                id: PlayerWord3
                boggleGame: root
                wordNumber: 3
            BattleWord:
                id: PlayerWord4
                boggleGame: root
                wordNumber: 4
            BattleWord:
                id: PlayerWord5
                boggleGame: root
                wordNumber: 5
            BattleWord:
                id: PlayerWord6
                boggleGame: root
                wordNumber: 6
            BattleWord:
                id: PlayerWord7
                boggleGame: root
                wordNumber: 7
            BattleWord:
                id: PlayerWord8
                boggleGame: root
                wordNumber: 8
            BattleWord:
                id: PlayerWord9
                boggleGame: root
                wordNumber: 9
            BattleWord:
                id: PlayerWord10
                boggleGame: root
                wordNumber: 10
        

    BoxLayout: 
        size_hint_y: None
        height: 40
        orientation: 'horizontal'
        
        Button:
            size_hint_y: None
            height: 40
            text: "Submit"
            on_release: root.submitWord()
        
        Button:
            size_hint_y: None
            height: 40
            text: "Clear"
            on_release: root.clearCurrentWord()

    Label:
        id: Info
        size_hint_y: None
        height: 100
        text: ''
        canvas:
            Color: 
                rgba: 1,0,1,0.1
            Rectangle:
                size: self.size
                pos: self.pos

    Label:
        id: CurrentWord
        size_hint_y: None
        height: 100
        text: ''
        canvas:
            Color: 
                rgba: 0,0,1,0.2
            Rectangle:
                size: self.size
                pos: self.pos
            

