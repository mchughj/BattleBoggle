#:kivy 1.0.9

BattleBoggleGame:

<BackgroundColor@Widget>
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: self.size
            pos: self.pos

<BoxLayoutWithBG@BoxLayout+BackgroundColor>:

<BattleWord>:
    orientation: 'horizontal'
    on_release: self.buttonRelease()
    size_hint_y: None
    height: 55
    boggleApp: app
    Label:
        text: str(root.wordNumber)
        font_size: 18
        color: 0,0,0,1
        halign: 'right'
        size_hint: (None, None)
        width: 55
        height: 20

    RelativeLayout: 
        id: Word
        size_hint_y: None
        height: 50


<BattleTile>:
    size_hint: (None, None)
    text: "R1C1"
    min_state_time: 0.1

<BattleArenaTile@BattleTile>:
    height: 100
    width: 100
    boggleApp: app

<BattleBoggleGame>:
    FloatLayout:
        size_hint: (None, None)
        width: root.width
        height: root.height - 205 
        pos: (0, root.height-self.height)

        canvas:
            Color: 
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint: (None, None)
            width: self.parent.width / 3
            height: self.parent.height
            pos: (0, self.parent.y + 100)

            on_touch_up: root.clearCurrentWord()
            id: OpponentWords
            orientation: 'vertical'
            
            Label:
                font_size: 18
                color: 0,0,0,1
                text: "Opponent Words"
                size_hint_y: None
                height: 35

            BattleWord:
                id: OpponentWord1
                wordNumber: 1
                visible: True
            BattleWord:
                id: OpponentWord2
                wordNumber: 2
                visible: False
            BattleWord:
                id: OpponentWord3
                wordNumber: 3
                visible: False
            BattleWord:
                id: OpponentWord4
                wordNumber: 4
                visible: False
            BattleWord:
                id: OpponentWord5
                wordNumber: 5
                visible: False
            BattleWord:
                id: OpponentWord6
                wordNumber: 6
                visible: False
            BattleWord:
                id: OpponentWord7
                wordNumber: 7
                visible: False
            BattleWord:
                id: OpponentWord8
                wordNumber: 8
                visible: False
            BattleWord:
                id: OpponentWord9
                wordNumber: 9
                visible: False
            BattleWord:
                id: OpponentWord10
                wordNumber: 10
                visible: False

        GridLayout: 
            id: Grid

            rows: root.rows
            cols: root.cols

            spacing: (10,10)

            col_default_width: 100
            col_force_default: True
            row_default_height: 100
            row_force_default: True

            size_hint: (None, None)
            height: self.minimum_height
            width: self.minimum_width
            pos: (1 * self.parent.width / 3, self.parent.y + 100)

            BattleArenaTile:
                id: R1C1
            BattleArenaTile:
                id: R1C2
            BattleArenaTile:
                id: R1C3
            BattleArenaTile:
                id: R1C4
            BattleArenaTile:
                id: R2C1
            BattleArenaTile:
                id: R2C2
            BattleArenaTile:
                id: R2C3
            BattleArenaTile:
                id: R2C4
            BattleArenaTile:
                id: R3C1
            BattleArenaTile:
                id: R3C2
            BattleArenaTile:
                id: R3C3
            BattleArenaTile:
                id: R3C4
            BattleArenaTile:
                id: R4C1
            BattleArenaTile:
                id: R4C2
            BattleArenaTile:
                id: R4C3
            BattleArenaTile:
                id: R4C4

        BoxLayout:
            id: PlayerWords

            size_hint: (None, None)
            width: self.parent.width / 3
            height: self.parent.height
            pos: (2 * self.parent.width / 3, self.parent.y + 100)

            orientation: 'vertical'
            
            Label:
                color: 0,0,0,1
                font_size: 18
                text: "Player Words"
                size_hint_y: None
                height: 35

            BattleWord:
                id: PlayerWord1
                wordNumber: 1
            BattleWord:
                id: PlayerWord2
                wordNumber: 2
            BattleWord:
                id: PlayerWord3
                wordNumber: 3
            BattleWord:
                id: PlayerWord4
                wordNumber: 4
            BattleWord:
                id: PlayerWord5
                wordNumber: 5
            BattleWord:
                id: PlayerWord6
                wordNumber: 6
            BattleWord:
                id: PlayerWord7
                wordNumber: 7
            BattleWord:
                id: PlayerWord8
                wordNumber: 8
            BattleWord:
                id: PlayerWord9
                wordNumber: 9
            BattleWord:
                id: PlayerWord10
                wordNumber: 10

    FloatLayout: 
        id: CurrentWord

        size_hint: (None,None)
        width: root.width
        height: 120
        pos: (0,85)
        canvas:
            Color: 
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
        
    Label:
        size_hint: (None,None)
        width: root.width
        pos: (0, 0)
        height: 85
        spacing: (10,10)
        color: 0,0,0,1

        id: Info
        size_hint_y: None
        text_size: root.width-10, 85
        font_size: 22
        halign: 'center'
        text: ''
        canvas.before:
            Color: 
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
            Color: 
                rgba: 1,0,1,0.5
            Line:
                points: ((self.x + self.spacing[0], self.y + self.spacing[1]),    (self.x+self.width - self.spacing[0], self.y + self.spacing[1]),      (self.x+self.width - self.spacing[0], self.y + self.height - self.spacing[1]),      (self.x + self.spacing[0], self.y+self.height - self.spacing[1]),      (self.x + self.spacing[0], self.y + self.spacing[1] ))
                

